<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".SDListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:src="@drawable/logo_sd" />

        <ImageButton
            android:id="@+id/xmlDismissButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:background="@drawable/white_circle"
            android:elevation="8dp"
            android:src="@drawable/baseline_arrow_back_24"/>

        <TextView
            android:id="@+id/xmlPathTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:textColor="@color/customTrueWhite"
            android:textSize="14sp"
            android:background="@drawable/path_background"
            android:textStyle="bold"
            android:padding="8dp"
            android:text="PATHï¼šsrc/asdfnj/"/>

        <ListView
            android:id="@+id/xmlListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

</LinearLayout>